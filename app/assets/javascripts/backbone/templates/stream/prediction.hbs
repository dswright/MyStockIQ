<div class="prediction-item" id="stream_prediction_13">

  <div class="vote-count-container clearfix">
    <div class="prediction-item-body col-xs-11 clearfix">
      <div class="col-xs-2 prediction-item-img">
          <a src="/users/{{user.username}}">
              <img src="{{user.image}}">
          </a>
      </div>
      <div class="prediction-item-txt">
        <a class="prediction-item-username" href="/users/{{user.username}}">{{user.username}}</a>
        <p class="prediction-item-main-txt">
            <a href ="/predictions/{{id}}/">${{ticker_symbol}} Prediction:</a>
