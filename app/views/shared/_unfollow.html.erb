<%= form_for(current_user.active_relationships.find_by(followed_id: @target.id, followed_type: @target.class.name),
										html: { method: :delete },
										remote: true) do |f| %>
  <%= hidden_field_tag :followed_id, @target.id %>
  <%= hidden_field_tag :followed_type, @target.class.name%>
  <%= f.submit "Unfollow", class: "btn" %>
<% end %>