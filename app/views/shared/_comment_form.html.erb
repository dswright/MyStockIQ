<!-- Comment Form -->
<% if logged_in? %>
  <div class = "stock-page-comment-box">
    <p class = "stock-page-prediction-header">
      <%= @comment_header %>
    </p>

    <%= form_for(@comment, remote:true) do |f| %>
    <% #Renders post form error messages using error_messages helper in app/views/shared/ %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.text_area :content, placeholder: "Enter comment", class: "stock-page-comment-field", id: "comment" %>
      <%= hidden_field_tag :stream_string, @comment_stream_inputs %>
      <%= hidden_field_tag :landing_page, @comment_landing_page %>
      <%= f.submit "Post", class: "btn btn-primary" %>
    <% end %>

  </div>
<% end %>	
