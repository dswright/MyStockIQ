<%= form_for(@prediction) do |f| %>

<% #Renders post form error messages using error_messages helper in app/views/shared/ %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class = "field">
		<%= f.text_area :prediction_price, placeholder: "Future stock price will be... (eg. 100)", class: "stock-page-prediction-field" %>
		<%= f.text_area :prediction_comment, placeholder: "Add a comment... (optional)", class: "stock-page-comment-field" %>
		<%= f.hidden_field :score %>
		<%= f.hidden_field :stock_id %>
	</div>
	<%= f.submit "Post", class: "btn btn-primary" %>
<% end %>