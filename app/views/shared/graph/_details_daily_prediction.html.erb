<div class="graph-prediction-stats clearfix">
  <div class="graph-stats-date-price col-xs-4">
    <p class="graph-price">$<%= prediction_custom[:price].round(2) %></p>
    <p class="graph-label"><%= (prediction_custom[:date] + Time.zone_offset("EST")).strftime("%b %d, %Y") %></p>
  </div>
  <div class="graph-prediction-stats-2 col-xs-4">
    <p class="graph-price"><%= prediction_custom[:score].round(2) %></p>
    <p class="graph-label">POINTS</p>
  </div>

  <div class="col-xs-4">
    <div class="graph-prediction-stats-2">
      <p class="graph-price">6</p>
      <p class="graph-label">FAVS</p>
    </div>
  </div>

</div>