<div class="login-main">
    <div class="logo-and-tabs">
        <div class="login-logo">
            <img name="stockhero" role="title" src="">
        </div>
        <div id="login">
            <p><%= link_to "Login", login_path %></p>
        </div>
        <div id="create-account">
            <p><%= link_to "Create Account", users_path %></p>
        </div>
    </div>

    <div class="formbox">

        <h1>Sign Up for StockHero</h1>

        <div id='signup_form'>

            <%= form_for(:user, url: users_path) do |f| %>

                <h2>Username</h2>
                <%= f.text_field :username, :class => "field", :id => "username" %><br>

                <h2>Email address</h2>
                <%= f.text_field :email, :class => "field", :id => "email" %><br>

                <h2>Password</h2>
                <%= f.password_field :password, :class => "field", :id => "password" %>

                <h2>Confirm Password</h2>
                <%= f.password_field :password_confirmation, :class => "field", :id => "password" %>

                <%= f.submit "Sign Up", :class => "btn login-btn" %>

            <% end %>

        </div>

        <div id="formbox-signup-tips">
            <h2>Already have an account?</h2>
            <%= link_to "Login", login_path %>
        </div>

    </div><br>

