        <input class="signup-email-field" id="signup-form-field" placeholder="Password">
        <input class="signup-email-field" id="signup-form-field" placeholder="Confirm Password">
      </div>
      <div class="signup-submit-button-div">
        <a class="btn">CREATE ACCOUNT</a>
      </div>
    </div>
  </div>
</div>

