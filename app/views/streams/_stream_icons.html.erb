        <% #Renders post form error messages using error_messages helper in app/views/shared/ %>
        <%= f.hidden_field :like_type, value: "dislike" %>
        <%= f.hidden_field :target_type, value: stream.streamable_type %>
        <%= f.hidden_field :target_id, value: stream.streamable_id %>
        <%= hidden_field_tag :streamable_likes, icons[:likes] %>
        <%= hidden_field_tag :streamable_dislikes, icons[:dislikes] %>

