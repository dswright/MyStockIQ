

    <div class="comment-only-item" id="stream_<%= stream.id %>">
      <div class="comment-only-vote-count-container clearfix">
        <div class="comment-only-item-body col-xs-11 clearfix">
          <div class="col-xs-2 comment-only-item-img">
            <%= image_tag "del.jpg" %>
          </div>
          <div class="comment-only-item-txt">
            <p class="comment-only-item-username"><%= stream.streamable.user.username %></p>
            <p class="comment-only-item-main-txt"><%= stream.streamable.content %> <a href="#">#drake</a><a href="#">#6god</a> <a href="#">#ohveeohhh</a></p>
          </div>
        </div>
        <div class="comment-only-item-vote-count col-xs-1">
          <a class="comment-only-vote-count-up" href="#"><i class="fa fa-angle-up"></i></a>
          <p>10</p>
          <a class="comment-only-vote-count-down" href="#"><i class="fa fa-angle-down"></i></a>
        </div>
      </div>
      <div class="stream-item-comments">
        <div class="stream-comment-header">
          <p>2 Replies</p>
        </div>

        <!-- load partials for each reply -->
        <% stream.streamable.replies.each do |reply| %>
          <%= render partial: "streams/stream_reply", locals: {reply: reply}  %>
        <% end %>

        <!-- load this reply input everytime -->
        <%= render partial: "streams/stream_reply_form", locals: {stream: stream}  %>
        
      </div>
    </div>
