<% @streams.each do |stream_item| 
  if stream_item.streamable_type == "Comment" %>
    <%= render partial: "streams/stream_comment", locals: {comment: stream_item.streamable} %>
  <% elsif stream_item.streamable_type == "Prediction" %>
    <%= render partial: "streams/stream_prediction", locals: {prediction: stream_item.streamable} %>
  <%end%>
<%end%>
