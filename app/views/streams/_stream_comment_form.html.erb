
<%= form_for(Comment.new, remote:true) do |f| %>
  <%= f.text_area :content, placeholder: "crappy reply box placeholder", class: "stock-page-comment-field", id: "comment", style: "width:100px; height:70px; float:left;" %>
  <%= hidden_field_tag :ticker_symbol, ticker_symbol  %>
  <%= f.submit "Post", class: "btn btn-primary", style: "float:left; width:50px;" %>
<% end %>

