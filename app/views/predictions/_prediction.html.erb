<div class="stockpage-sidebar-open">
  <div class="stockpage-sidebar-open-header black-gradient">
    <div class="stockpage-sidebar-open-header-txt pull-left">
      Open Prediction
    </div>
    <div class="stockpage-sidebar-open-points pull-right">
      <i class="fa fa-line-chart"></i>
    </div>
  </div>
  <div class="stockpage-sidebar-open-box">
    <div class="sidebar-open-item col-md-4">
      <p class="sidebar-open-figure">50 days</p>
      <p class="sidebar-open-title">REMAINING</p>
    </div>
    <div class="sidebar-open-item col-md-4">
      <p class="sidebar-open-figure">$<%= prediction.prediction_end_price %></p>
      <p class="sidebar-open-title">TARGET</p>
    </div>
    <div class="sidebar-open-item col-md-4">
      <p class="sidebar-open-figure"><%= prediction.score %></p>
      <p class="sidebar-open-title">POINTS</p>
    </div>  

    <% if prediction.user.id == current_user.id #only show cancel button if the creator of the prediction is looking at the form.%>
      <%= form_for(Predictionend.new, remote:true) do |f| %>
        <%= hidden_field_tag :input_page, @prediction_end_input_page %>
        <%= hidden_field_tag :prediction_id, prediction.id %>
        <div class="sidebar-close-button">
          <%= f.submit "CLOSE PREDICTION", class: "btn" %>
        </div>
      <% end %>
      <%= link_to("prediction details", "/predictions/#{@prediction.id}") %>
    <% end %>
  </div>
</div>

  <div class = "stock-page-prediction-box" style="font-size:12px;">
    <div class = "row" style = "margin-left: 20px;">

      <p>start time: <%= prediction.start_time.in_time_zone("EST") %></p>
      <p>end time: <%= prediction.prediction_end_time.in_time_zone("EST") %></p>
      <p>start price: $<%= prediction.start_price %></p>
      <p>end price: $<%= prediction.prediction_end_price %></p>
      <p><%= prediction.distance_of_time_in_words(Time.zone.now, prediction.prediction_end_time) %> remaining</p>
      <p>
      

    </div>
  </div>

