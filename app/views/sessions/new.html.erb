<div class="constrainer">
  <div class="signin-form-div">
    <div class="signin-form-header red-gradient">
      <div class="signin-form-header-txt">
        Sign In
      </div>
    </div>
    <div class="signin-form-box">
      <p class="signin-signin-link">Don't have and account? <a href="#">Sign up here.</a></p>
      <div class="signin-form-fields">
        <input class="signin-email-field" id="signin-form-field" placeholder="Email address OR Username">
        <input class="signin-email-field" type="password" id="signin-form-field" placeholder="Password">
      </div>
      <div class="signin-submit-button-div">
        <a class="btn">SIGN IN</a>
      </div>
    </div>
