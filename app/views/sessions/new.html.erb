<div class="login-main">

    <div class="logo-and-tabs">
        <div class="login-logo">
            <img name="stockhero" role="title" src="" >
        </div>
        <div id="login">
            <p><%= link_to "Login", login_path %></p>
        </div>
        <div id="create-account">
            <p><%= link_to "Create Account", users_path %></p>
        </div>
    </div>

    <div class="formbox">

        <h1>Log in to StockHero</h1>

    <div id='login_form'>

      <%= form_for(:session, url: login_path) do |f| %>

        <h2>Username</h2>
        <%= f.text_field :email, :placeholder => "Enter username or email", :class => "field", :id => "username" %> <br>

        <h2>Password</h2>
        <%= f.password_field :password, :placeholder => "Enter password", :class => "field", :id => "password" %> <br>

        <%= f.submit "Login", :class => "btn login-btn" %>

      <% end %>

    </form>

        <div id="formbox-login-tips">
            <h2>Don't have an account?</h2>
            <%= link_to "Sign up now!", users_path %>
            <h2 class="pwd">Forget your password?</h2>
            <a href="#">Recover it here.</a>
        </div>

    </div><br>

